extends layout 

block content 

  h1 #{title} #{category.name}

  div.container.d-flex.flex-column(style="padding-left:20px;padding-top:20px;width:fit-content")
    hr
    a(href=category.url+'/update') 
      button.btn.btn-primary Update Category
    br
    a(href=category.url+"/delete") 
      button.btn.btn-primary Delete Category