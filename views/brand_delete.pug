extends layout 

block content 

  h1= title
  h3= brand.name 

  if items.length 
    p #[strong Please delete the following items connected with this brand:]

    for item in items 
        a(href=item.url)
          p #{item.brand.name} #{item.model}

  else 
    p #[strong Are you sure that you want to delete #{brand.name}?]

    form(action="" method="POST")
        div.form-group
          input#brandid(type="hidden" name="brandid" value=brand.id)
        div.form-group
          label(for="password" style='color:red') Admin Password: 
          input#password.form-control(type="password", name="password" style="max-width: 200px")  
        button.btn.btn-primary(type="submit") Confirm  

  if undefined != errors 
    ul
      for error in errors 
        li(style='color:red') #{error.msg} 
