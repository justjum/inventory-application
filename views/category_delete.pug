extends layout 

block content 

  h1= title 

  h3= category.name 

  if items.length 
    p #[strong Delete the following items prior to removing category:]

    for item in items 
      a(href=item.url) 
        p #{item.brand.name} #{item.model}

  else 
    p #[strong Are you sure you want to delete this category?]
    form(method="POST") 
      div.form-group
        input#category-id.form-control(type="hidden" name='categoryid' value=category.id)
      div.form-group
        label(for="password" style='color:red') Admin Password: 
        input#password.form-control(type="password", name="password" style="max-width: 200px")  
      button.btn.btn-primary(type='submit') Confirm

  if undefined != errors 
    ul
      for error in errors 
        li(style='color:red') #{error.msg} 