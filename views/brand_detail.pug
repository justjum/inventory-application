extends layout 

block content 

  h1 #{title} #{brand.name}

  div.container.d-flex.flex-column(style="padding-left:20px;padding-top:20px;width:fit-content")
    table 
          li #[strong Brand:] #{brand.name}
          li #[strong Website:] 
            a(href=brand.website) #{brand.website}

    hr
    a(href=brand.url+"/update") 
      button.btn.btn-primary Update Brand 
    br
    a(href=brand.url+"/delete") 
      button.btn.btn-primary Delete Brand
    